pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                script {
                  def props = readFile(file: "books.xml")
                  echo "$props"
                  def xml = new XmlSlurper().parseText(props)
                  echo "Printing xml"
                  echo "$xml"
                  def env = xml.catalog.book[0].title[0]
                    
                  echo "variable fetached= ${env}"
                }
            }
        }
    }
}
